<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<kanban name="kanban-view" sequenceBy="fullName"
		model="com.axelor.partner.db.Partner" columnBy="agreementPeriod"
		title="Partner-kanban" limit="5">
		<field name="fullName" />
		<field name="image" />
		<field name="startdate" />
		<field name="company" />
		<template><![CDATA[
			<h4>{{fullName}}</h4>
    		<img ng-if="hasImage" ng-src="{{$image(null, 'image')}}">
        	<img ng-if="!hasImage" src="img/user.png">
    		<div class="card-body">{{seeCompany}}</div>
    		<div class="card-footer">
      		<i class='fa fa-clock-o'></i> <span>{{startdate:'yyyy-MM-dd'}}</span>
    		</div>
		]]></template>
	</kanban>

</object-views>